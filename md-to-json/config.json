{
  "input": {
    "patterns": ["./input/**/*.md", "!./input/ignored/**"],
    "mode": "raw"
  },
  "output": {
    "directory": "./output",
    "consolidate": {
      "enabled": true,
      "filename": "consolidated.json",
      "groupBy": "type"
    },
    "keepIndividualFiles": false
  },
  "report": {
    "enabled": true,
    "filename": "conversion-report.json",
    "includeWarnings": true
  }
}
